<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Bootstrap</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                    <div class="navbar-collapse" >
                        <a class="btn  btn-lg" href="/Home/Index">Home</a>
                        <a class="btn  btn-lg" href="/Home/About">About</a>
                        <a class="btn  btn-lg" href="/Home/Contact">Contact</a>
                        <a class="btn  btn-lg" href="/Track/Index">Tracks</a>

                    </div>
                </div>
        </header>
        <div id="body"  >
            <div class="content-wrapper">

                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix table-bordered">
                    @RenderBody()
                </section>
            </div>
        </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
