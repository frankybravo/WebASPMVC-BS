@{
    ViewBag.Title = "Home Page";
}

@using (Ajax.BeginForm(
            new AjaxOptions
            {
                HttpMethod = "get",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "searchId"
            }))
{
    <input type="search" name="search" />
    <input type="submit" name="submit" />
}


<div>
    @Html.Partial("_searchListMod")
</div>

<div class="row clearfix">
    <div class="col-md-2 column">
       
    </div>
    <div class="col-md-6 column">
        <section class="featured">

           
                        <div class="carousel slide" id="indexCarousel">

                            <div class="carousel-inner">
                                <ol class="carousel-indicators">
                                    <li data-slide-to="0" data-target="#indexCarousel" class="active"></li>
                                    <li data-slide-to="1" data-target="#indexCarousel" class=""></li>
                                    <li data-slide-to="2" data-target="#indexCarousel" class=""></li>
                                    <li data-slide-to="3" data-target="#indexCarousel" class=""></li>
                                </ol>
                                <div class="item active">
                                    <img alt="" src="~/Content/kr-2.png" />
                                    <div class="carousel-caption">
                                        <h1>King Rollo</h1>
                                        <h2>
                                            King Rollo is the self proclaimed ruler of Rolloland.

                                            Likes:
                                            Ruling over the subjects(being bossy).
                                            Owning lots of gold.
                                            Talking.

                                            Dislikes:
                                        </h2>
                                    </div>
                                </div>
                                <div class="item">
                                    <img alt="" class="icon-align-center" src="~/Content/qn-1.png" />
                                    <div class="carousel-caption">
                                        <h1>Queenie</h1>
                                        <p> </p>
                                    </div>
                                </div>
                                <div class="item">
                                    <img alt="" class="icon-align-center" src="~/Content/bc-1.png" />
                                    <div class="carousel-caption">
                                        <h1>Baddy Cool</h1>
                                        <p> </p>
                                    </div>
                                </div>
                                <div class="item">
                                    <img alt="" class="icon-align-center" src="~/Content/dh-1.png" />
                                    <div class="carousel-caption">
                                        <h1>Dessert Horses</h1>
                                        <p> </p>
                                    </div>
                                </div>


                            </div>

                            <a class="left carousel-control" href="#indexCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                            <a class="right carousel-control" href="#indexCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>

                        </div>

                    
           
        </section>
    </div>
    <div class="col-md-4 column">
        @Html.Partial("_searchList")
    </div>
</div>


    



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
  


}