@model WebASPMVC_BS.Models.ITEM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.id)

        @Html.HiddenFor(model => model.id_orig_owner)

        <blockquote contenteditable="false">

            <p>

                <div class="editor-label">
                    Short Description
                </div>
                <span class="label label-info" contenteditable="true">@Html.DisplayFor(model => model.dscr_short)</span>

            </p>
            <p>
                <div class="editor-label">
                    Full Description
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.dscr_full, new { style = "align:left; width: 200px; height: 100px;" })
                    @Html.ValidationMessageFor(model => model.dscr_full)
                </div>

            </p>
            <p>
                <div class="editor-label">
                    Condition
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.typ_condition)
                    @Html.ValidationMessageFor(model => model.typ_condition)
                </div>

            </p>
            </blockquote>

            <p>
                <input type="submit" value="Save" />
            </p>
</fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
